type Task = record {
    "title": text;
    "description": text;
    "status": text;
};

service : {
    "add_task": (Task) -> (text);
    "get_tasks": () -> (opt vec Task) query;
    "change_task_status": (task_id: nat, status: text) -> (opt text);
    "get_tasks_with_pagination": (page_no: nat, page_size: nat) -> (opt vec Task) query;
    "update_todo_description": (page_no: nat, description: text) -> (opt text);
    "delete_todo_by_id": (page_no: nat) -> (opt text);
}